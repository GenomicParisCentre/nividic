<?xml version="1.0" encoding="ISO-8859-1"?>
<project
  xmlns:reactor="reactor"
  xmlns:j="jelly:core"
  xmlns:u="jelly:util"
  xmlns:maven="jelly:maven"
  xmlns:m="maven"
  xmlns:ant="jelly:ant">

  <pregoal name="pdf">
  
    <!-- copy Jini dependeny for image rendering in pdf -->
    <ant:mkdir dir="${maven.repo.local}/fop/jars"/>
    <ant:copy file="${maven.repo.local}/jimi/jars/jimi-1.0.jar"
                todir="${maven.repo.local}/fop/jars"
                failonerror="false"/>
  </pregoal>

  <preGoal name="site">
     <attainGoal name="pdf"/>
  </preGoal>


</project>

			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>jnlp</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<!--outputDirectory></outputDirectory-->
					<!-- not required?? -->

					<!-- transitive dependencies filter -->
					<dependencies>
						<!-- Note that only groupId and artifactId must be specified here. because of a limitation of the Include/ExcludesArtifactFilter -->
						<includes>
							<!--include>commons-cli:commons-cli</include-->
							<!--include>commons-logging:commons-logging</include-->
							<include>commons-collections:commons-collections</include>
							<!--include>dom4j:dom4j</include>
							<include>log4j:log4j</include-->
							<include>commons-primitives:commons-primitives</include>
							<include>commons-lang:commons-lang</include>
							<!--include>rosuda:JRclient</include-->
							<include>commons-math:commons-math</include>
							<!--include>commons-codec:commons-codec</include>
							<include>axis:axis</include>
							<include>axis:axis-jaxrpc</include-->
							<include>com.sun.phobos:jsr223-api</include>
							<include>com.sun.phobos:phobos-rhino</include>
							<include>mozilla:js</include>
							<!--include>trolltech:qtjambi-launcher</include-->
							<!--include>trolltech:qtjambi</include>
							<include>trolltech:qtjambi-linux</include>
							<include>trolltech:qtjambi-mac</include>
							<include>trolltech:qtjambi-win32</include-->
							<!-- excludes>
								<exclude></exclude>
							<excludes-->
						</includes>
					</dependencies>

					<!-- JNLP generation -->
					<jnlp>
						<!-- default values -->
						<resources>${project.basedir}/src/jnlp/resources</resources>
						<inputTemplateResourcePath>${project.basedir}</inputTemplateResourcePath>
						<inputTemplate>src/jnlp/template.vm</inputTemplate>
						<!-- relative to inputTemplateResourcePath -->
						<outputFile>jsconsole.jnlp</outputFile><!-- defaults to launch.jnlp -->

						<!-- used to automatically identify the jar containing the main class. -->
						<!-- this is perhaps going to change -->
						<mainClass>fr.ens.transcriptome.nividic.js.swing.JSConsole</mainClass>
						<!--mainClass>fr.ens.transcriptome.nividic.js.swing.AnalogClock</mainClass-->
					</jnlp>


					<!-- SIGNING -->
					<!-- defining this will automatically sign the jar and its dependencies, if necessary -->
					<sign>
						<keystore>keystore</keystore>
						<keypass>m2m2m2</keypass><!-- we need to override passwords easily from the command line. ${keypass} -->
						<storepass>m2m2m2m</storepass><!-- ${storepass} -->
						<storetype />
						<alias>leburonkey</alias>
						<validity>36000</validity>

						<dnameCn>ENS Microarray Platform Bioinformatic Team</dnameCn>
						<dnameOu>Microarray Platform</dnameOu>
						<dnameO>École Normale Supérieure</dnameO>
						<dnameL>Paris</dnameL>
						<dnameSt>Ile de France</dnameSt>
						<dnameC>fr</dnameC>

						<verify>true</verify>
					</sign>

					<!-- KEYSTORE MANGEMENT -->
					<keystore>
						<delete>true</delete><!-- delete the keystore -->
						<gen>true</gen><!-- optional shortcut to generate the store. -->
					</keystore>

					<!-- BUILDING PROCESS -->
					<!--usejnlpservlet>true</usejnlpservlet-->
					<!-- not yet supported -->

					<!-- should we have some more configurations here? E.g. compression level (aka packing effort) -->
					<!-- not yet implemented -->
					<!--pack200>true</pack200>
					<gzip>true</gzip--><!-- default force when pack200 false, true when pack200 selected ?? -->

					<!-- misc -->
					<!-- if there are multiple apps, do we need to mark one as default? (app/ redirects to app/default.jnlp in jnlp servlet ??)-->
					<!-- -->

					<!--install>false</install--><!-- not yet supported -->
					<verbose>false</verbose>

				</configuration>
			</plugin>


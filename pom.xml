			<plugin>
       				<artifactId>maven-antrun-plugin</artifactId>
       				<executions>
         				<execution>
						<id>integrate-jnlp-site</id>
           					<phase>install</phase>
           					<configuration>
             						<tasks>
								<mkdir dir="${basedir}/target/site/webstart"/>
								<unzip src="${basedir}/target/${artifactId}-${version}.zip" dest="${basedir}/target/site/webstart"/>
								<delete file="${basedir}/target/site/webstart/keystore"/>

								<replace dir="${basedir}/target/site" value="${pom.url}">
									<include name="**/*.jnlp"/>
									<include name="**/*.html"/>
									<replacetoken>@@@WEBSITE@@@</replacetoken>
								</replace>
             						</tasks>
           					</configuration>
           					<goals>
             						<goal>run</goal>
           					</goals>
         				</execution>
					<execution>
						<id>add-ressources-jar</id>
           					<phase>generate-resources</phase>
           					<configuration>
             						<tasks>
								<mkdir dir="${basedir}/target/classes/javascript"/>	
								<copy todir="${basedir}/target/classes/javascript">
									<fileset dir="${basedir}/src/main/javascript" includes="*.js"/>
								</copy>
             						</tasks>
           					</configuration>
           					<goals>
             						<goal>run</goal>
           					</goals>
         				</execution>
       				</executions>
     			</plugin>
